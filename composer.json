{
    "name": "clock-wise/cw-connector",
    "version": "1.0.0",
    "description": "Project focused on automated testing studies",
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Tests\\": "tests/",
            "Domain\\": "src/Domain",
            "Application\\": "src/Application",
            "Infrastructure\\": "src/Infrastructure",
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "PedroBarros"
        }
    ],
    "scripts": {
        "test": "phpunit tests",
        "stan": "phpstan analyse src/ --level=10",
        "check-all": "phpstan analyse src/ --level=10 && phpunit tests",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^12",
        "mockery/mockery": "^1.6.12",
        "fakerphp/faker": "^1.24.1",
        "squizlabs/php_codesniffer": "^3.7.2",
        "phpstan/phpstan": "^2.1.4"
    },
  "require": {
    "php": "^8.3",
    "ext-iconv": "*",
        "guzzlehttp/guzzle": "^7.9",
        "symfony/var-dumper": "^7.2"
  }
}
